@{
    ViewData["Title"] = "About Us";
}
<link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />

<div class="container mt-4">
    <!-- About Us Heading -->
    <div class="text-center">
        <h1 class="display-4">About Crystal Clear Recruitment</h1>
        <p class="lead">Connecting Talent with Opportunities</p>
        <hr />
    </div>

    <!-- Mission and Services Section -->
    <div class="row">
        <div class="col-12 col-md-6 mb-4">
            <div class="card shadow-sm rounded p-4">
                <h2 class="text-deep-purple">Our Mission</h2>
                <p>At Crystal Clear Recruitment, our mission is to bridge the gap between job seekers and employers. We provide a seamless platform that helps individuals find their dream jobs and companies connect with the right talent.</p>
            </div>
        </div>
        <div class="col-12 col-md-6 mb-4">
            <div class="card shadow-sm rounded p-4">
                <h2 class="text-deep-purple">Our Services</h2>
                <ul>
                    <li><strong>Job Search:</strong> Browse job listings from various industries.</li>
                    <li><strong>Interview Guidance:</strong> Keep up to date with our Interview Tips and FAQ to help you land your dream job.</li>
                    <li><strong>Application Management:</strong> Track job applications and responses.</li>
                    <li><strong>Employer Services:</strong> Post jobs, search for candidates, and manage hiring.</li>
                </ul>
            </div>
        </div>
    </div>

    <!-- Our Team Section -->
    <div class="row mt-4 mb-6 text-center">
        <div class="col-12">
            <h2 class="text-deep-purple">Our Team</h2>
            <p>We are a group of dedicated professionals with a passion for helping people achieve their career goals.</p>

            <div class="row justify-content-center">
                <!-- Team Member 1 -->
                <div class="col-12 col-sm-6 col-md-4 mb-5">
                    <div class="flip-card">
                        <div class="flip-card-inner">
                            <div class="flip-card-front">
                                <img src="~/images/team1.jpg" class="img-fluid rounded-circle" alt="Jane Doe">
                                <h5>Jane Doe</h5>
                                <p>CEO & Founder</p>
                            </div>
                            <div class="flip-card-back">
                                <p>"Passionate about connecting talent with opportunities."</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Team Member 2 -->
                <div class="col-12 col-sm-6 col-md-4 mb-5">
                    <div class="flip-card">
                        <div class="flip-card-inner">
                            <div class="flip-card-front">
                                <img src="~/images/team2.jpg" class="img-fluid rounded-circle" alt="John Smith">
                                <h5>John Smith</h5>
                                <p>Chief Technology Officer</p>
                            </div>
                            <div class="flip-card-back">
                                <p>"Innovating the recruitment industry with cutting-edge technology."</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Team Member 3 -->
                <div class="col-12 col-sm-6 col-md-4 mb-5">
                    <div class="flip-card">
                        <div class="flip-card-inner">
                            <div class="flip-card-front">
                                <img src="~/images/team3.jpg" class="img-fluid rounded-circle" alt="Mary Johnson">
                                <h5>Mary Johnson</h5>
                                <p>Head of Recruitment</p>
                            </div>
                            <div class="flip-card-back">
                                <p>"Dedicated to finding the perfect match between candidates and employers."</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Contact Us Section Wrapped in a Box -->
    <div class="row mt-5">
        <div class="col-12 col-md-8 offset-md-2">
            <div class="card contact-box p-4">
                <h2 class="text-deep-purple text-center">Contact Us</h2>
                <p class="text-center">We would love to hear from you. Whether you have a question, feedback, or need support, please get in touch with us.</p>
                <div class="contact-info text-center">
                    <p><strong>Email:</strong> support@crystalclear.com</p>
                    <p><strong>Phone:</strong> +1 (123) 456-7890</p>
                    <p><strong>Address:</strong> 123 Crystal Clear Lane, Employment City, Jobland, 12345</p>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
